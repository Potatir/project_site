            <button class="bolshe1 increment">+</button>
    <script>
        // Получаем ссылки на элементы кнопки и меню
        const openMenuBtn = document.getElementById('open-menu');
        const menu = document.getElementById('menu');

        // Назначаем обработчик события для кнопки открытия меню
        openMenuBtn.addEventListener('click', function () {
            // Показываем меню
            menu.style.display = 'block';
        });

        // Получаем ссылки на все счетчики в меню
        const adultCounter = document.querySelector('.adult-counter');
        const childCounter = document.querySelector('.child-counter');
        const numberCounter = document.querySelector('.number-counter');

        // Функция для уменьшения значения счетчика
        function decrementCounter(counter) {
            let value = parseInt(counter.textContent);
            value--;
            if (value < 0) {
                value = 0;
            }
            counter.textContent = value;
        }

        // Функция для увеличения значения счетчика
        function incrementCounter(counter) {
            let value = parseInt(counter.textContent);
            value++;
            counter.textContent = value;
        }

        // Назначаем обработчики событий для кнопок в меню
        const decrementButtons = document.querySelectorAll('.decrement');
        const incrementButtons = document.querySelectorAll('.increment');

        decrementButtons.forEach(button => {
            button.addEventListener('click', function () {
                const counter = this.nextElementSibling;
                decrementCounter(counter);
            });
        });

        incrementButtons.forEach(button => {
            button.addEventListener('click', function () {
                const counter = this.previousElementSibling;
                incrementCounter(counter);
            });
        });

    </script>
